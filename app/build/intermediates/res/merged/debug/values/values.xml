<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#000000</color>
    <color name="bottom_text_selected">#ffffff</color>
    <color name="bottom_text_unselected">#82858b</color>
    <color name="gray">#bcbcbc</color>
    <color name="white">#ffffff</color>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="bottom_bar_height">60dp</dimen>
    <dimen name="top_bar_height">45dp</dimen>
    <dimen name="top_goback_width">60dp</dimen>
    <dimen name="top_gonext_width">60dp</dimen>
    <string name="app_name">BottomMenuDemo</string>
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="main_bottom_bar_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="main_bottom_bar_linear">
	    <item name="android:layout_width">0dp</item>
	    <item name="android:layout_height">@dimen/bottom_bar_height</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:gravity">center</item>
	    <item name="android:orientation">vertical</item>
	</style>
    <style name="main_bottom_bar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#82858b</item>
    </style>
</resources>