<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="@dimen/top_goback_width"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:padding="5dp" >

        <ImageButton
            android:id="@+id/top_goback_ibtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:onClick="goBack"
            android:scaleType="fitCenter"
            android:src="@drawable/top_goback_selector" />

        <TextView
            android:id="@+id/top_goback_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/top_title_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="测试标题"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="@dimen/top_gonext_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:padding="5dp" >

        <ImageButton
            android:id="@+id/top_gonext_ibtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:onClick="goNext"
            android:scaleType="fitCenter"
            android:src="@drawable/top_gonext_selector" />

        <TextView
            android:id="@+id/top_gonext_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="下一个"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>